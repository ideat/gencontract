<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!--<properties resource="application.properties"/> -->

    <typeAliases>
        <package name="com.mindware.model"/>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="org.postgresql.Driver"/>
                <property name="url" value="jdbc:postgresql://localhost:5432/dbcontract?searchpath=public"/>
                <property name="username" value="postgres"/>
                <property name="password" value="postgres"/>
            </dataSource>
        </environment>

        <environment id="netbank">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.informix.jdbc.IfxDriver"/>
                <property name="url" value="jdbc:informix-sqli://192.168.80.131:1530/tbase:INFORMIXSERVER=online"/>
                <property name="username" value="informix"/>
                <property name="password" value="informix"/>
            </dataSource>
        </environment>


    </environments>
    <mappers>
        <package name="com.mindware.mappers"/>
       <!-- <mapper resource="com/mindware/mappers/EmpleadoMapper.xml"/> -->
    </mappers>
</configuration>
